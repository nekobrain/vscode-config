{
    # Comment the following line to disable zoom
    "window.zoomLevel": -2,
    "vim.leader": ",",
    "vim.normalModeKeyBindingsNonRecursive": [
        {
            "before": [
                "<leader>",
                "c",
                "<space>"
            ],
            "commands": [
                "editor.action.commentLine"
            ]
        },
        {
            "before": [
                "<Shift-h>"
            ],
            "commands": [
                "workbench.action.previousEditor"
            ]
        }
    ],
    "vim.visualModeKeyBindings": [
        {
            "before": [
                "<leader>",
                "c",
                "<space>"
            ],
            "commands": [
                "editor.action.commentLine"
            ]
        },
    ]
}